<%= stylesheet_link_tag 'login', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class="main-content">
<body class="login-background">
  <div class="login-container">
    <h2 class="text-center">ログイン</h2>

    <%= form_with(url: login_path, local: true, scope: :session) do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "example@example.com" %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "password" %>
      </div>

      <div class="form-check">
        <%= check_box_tag :remember_me, '1', false, class: "form-check-input" %>
        <%= label_tag :remember_me, "ログイン情報を保存する", class: "form-check-label" %>
      </div>

      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>

    <div class="link-section">
      <%= link_to "パスワードを忘れましたか?", new_password_reset_path, class: "small" %>
      <br>
      <%= link_to "新規登録", signup_path, class: "small" %>
    </div>
  </div>
</body>
</div>
